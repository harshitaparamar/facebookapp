
<div class="card my-5">
  <div class="card-body">
    <h1>Edit Post</h1>

    <%= render 'form', post: @post %>

    <div class="mt-2">
    <%= button_to 'Destroy',"/posts/#{@post.id}", method: :delete,
                     :onclick => "return confirm('Are you sure you want to delete this task?')" , class: 'btn btn-danger mr-2' %>
    <%= link_to 'Back', posts_path, class: 'btn btn-light' %>
    </div>
  </div>
</div>