
<% com.each do |comment| %>
  <% unless comment.parent_id || !comment.persisted? %>
  <div class="card">
    <div class="card-body">
    
      <%= comment.user_id %>
      <%= comment.comment %>
      
      <%= render partial: 'comments/form', locals: { post: post, parent_id: comment.id , comment: comment } %>

      </div>
  </div>

    <% if comment.replies.any? %>
      <% comment.replies.each do |reply| %> 
        <%= render partial: 'comments/reply', locals: { reply: reply } %>
      <% end %>
    <% end %>
  <% end %>
  <div id="reply-form-<%= comment.id %>"></div>

<% end %>
